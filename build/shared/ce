#!/usr/bin/env bash
#-------------------------------------------------------------------------------
set -e

CENV_DATA=~/.cenv/data
CENV_CONFIG="${CENV_DATA}/django.env"
CENV_LIB=~/.cenv/lib

mkdir -p "${CENV_DATA}"
mkdir -p "${CENV_LIB}"

if [ -f "${CENV_DATA}/cenv.env" ]
then
    source "${CENV_DATA}/cenv.env"
else
    CENV_REPO=''
    CENV_IMAGE='cenv/cenv:latest'
fi
if [ ! -z "${CENV_REPO}" ]
then
    CENV_REMOTE="${CENV_REPO}/${CENV_IMAGE}"
else
    CENV_REMOTE="${CENV_IMAGE}"
fi

if [ -z "${CENV_DEBUG}" ]
then
    echo " ** synchronizing runtime..."
    docker pull "${CENV_REMOTE}" >/dev/null 2>&1
fi
if [ ! -f "${CENV_CONFIG}" ]
then
    echo "
CENV_SECRET_KEY=0123456789876543210
" > "${CENV_CONFIG}"
fi
docker run --interactive --rm --tty \
    --env-file "${CENV_CONFIG}" \
    --env-file <(env | grep "CENV_") \
    --network host \
    --volume /var/run/docker.sock:/var/run/docker.sock \
    --volume "${CENV_DATA}":/var/local/cenv \
    --volume "${CENV_LIB}":/usr/local/lib/cenv \
    "${CENV_IMAGE}" "${@}"
